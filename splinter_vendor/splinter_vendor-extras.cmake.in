find_library(splinter_LIBRARY splinter-3-0 REQUIRED)
add_library(splinter SHARED IMPORTED)
find_path(splinter_INCLUDE_DIRS
  NAMES SPLINTER/datatable.h
)

set_target_properties(splinter PROPERTIES
    IMPORTED_LOCATION "${splinter_LIBRARY}"
    INTERFACE_LINK_LIBRARIES "${splinter_LIBRARY}"
    INTERFACE_INCLUDE_DIRECTORIES "${splinter_INCLUDE_DIRS}")

find_package(eigen3_cmake_module REQUIRED)
find_package(Eigen3 REQUIRED)
message(STATUS "Ensuring Eigen3 include directory is part of splinter CMake target")
if(TARGET Eigen3::Eigen3)
  target_link_libraries(splinter INTERFACE Eigen3::Eigen)
else()
  target_include_directories(splinter SYSTEM INTERFACE ${Eigen3_INCLUDE_DIRS})
endif()
